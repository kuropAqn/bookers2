
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <%= render 'users/users', book: @book, user: @user %>
				


	    <div class='col-md-8 offset-md-1'>
	    <h2>Book detail</h2>
	    <table class='table table-hover table-inverse'>
	      <tbody>
					<tr>
						<td>
							<%= image_tag @user.get_profile_image %>
							<br><%= link_to @user.name, user_path(@user) %></br>
						</td>
						<td><%= link_to @book.title, book_path(@book) %></td>
						<td><%= @book.body %></td>
							<% if @book.user == current_user %>
								<td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
								<td><%= link_to "Destroy", book_path(@book), method: :delete,class: "btn btn-danger","data-confirm" => "本当に削除しますか？" %></td>
							<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag 'default-image.jpg' %> <!-- あとで変更 -->
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th> 
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><% if current_user.introduction.present? %>
					<%= current_user.introduction %>
				<% else %>
					まだ自己紹介文が設定されていません。
				<% end %></th>  
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to 'Edit', edit_user_path(current_user.id) %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <<%= form_with model: @book, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

      	<h4>Body</h4>
        <%= f.text_area :body %>

				<%= f.submit 'Create Book' %>

			<% end %>
		
		</div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
				<%= @books.each do |f| %>
					<tr>
					<td>
						<a><%= f.title %></a>
					</td>
					<td>
						<a><%= f.body %></a>
					</td>
					</tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>

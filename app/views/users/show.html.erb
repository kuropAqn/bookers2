<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>

	    <table class='table'>
	      <tr>
	        <%= image_tag 'default-image.jpg' %>  <!-- 固定値になっているので変数を使いましょう -->
	      </tr>
	      <tr>
	        <th>name</th>
	        <th>@user.name</th>  <!-- 固定値になっているので変数を使いましょう -->
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th>   <!-- 固定値になっているので変数を使いましょう -->
					<% if current_user.introduction.present? %>
					<%= current_user.introduction %>
				<% else %>
					まだ自己紹介文が設定されていません。
				<% end %></th>  
				</th>
	      </tr>
	    </table>　
	    <div class='row'>   <!-- 編集リンクが未実装 -->
			   <%= link_to 'Edit', edit_user_path(current_user.id) %>
	    </div>
	    <h2 class="mt-3">New book</h2>  <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
			  <%= form_with model: @book, url: '/books', method: :post do |f| %>
			
				  <h4>Title</h4>
          <%= f.text_field :title %>

      	  <h4>Body</h4>
          <%= f.text_area :body %>

				  <%= f.submit 'Create Book' %>
				<% end %>
	  </div>

		
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user.id) do %>
								<%= image_tag @user.get_profile_image %>
							<% end %>
						</td>
						<td> 
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %> 
						</td>
						<td>   
							<%= book.body %>
						</td>
					</tr>   
				<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>
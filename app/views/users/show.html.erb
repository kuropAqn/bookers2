<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag @user.profile_image_url %>  
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th>  
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>  
	      </tr>
	    </table>
	    <div class='row'>
	      <%= link_to 'Edit', edit_user_path(current_user.id) %>
	    </div>
	    <h2 class="mt-3">New book</h2>
	    <%= form_with model: @book, each do |book| %>
  	      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
				</tr>
			<% end %>
		
		</div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
    			<%= form_with model: @books each do |book| %>


	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody></tbody>
	    </table>
	  </div>
	</div>
</div>
